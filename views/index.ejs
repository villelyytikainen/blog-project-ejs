<div class="author">
    <h1 class="author__heading">Hi, I am Ville.</h1>
    <p class="author__body">Web Developer</p>
</div>

<img src="/img/hero-image.webp" alt="person looking out through window" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">

        <% data.forEach(element =>{ %>

        <li>
            <a href="/post/<%=element._id %>">
                <span><%=element.title %></span>
                <span class="article-list__date"><%=element.createdAt.toDateString() %></span>
            </a>
        </li>

        <% }) %>
    </ul>

    <% if(nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
    <% if(current > 1){ %>
        <a href="/?page=<%= current -1 %>" class="pagination">&lt; View Newer Posts</a>
    <% } %>
</section>